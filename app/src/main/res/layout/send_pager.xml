<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:calendarview="http://schemas.android.com/tools"
    android:background="#FA6837"
    android:orientation="vertical"
    android:id="@+id/rl_main"
    android:gravity="center_horizontal"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布"
            android:textColor="@color/tab_background"
            android:textSize="@dimen/sp_15" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="@dimen/dp_227"
        android:layout_height="@dimen/dp_114"
        android:background="@drawable/shape_select"
        >
        <TextView
            android:id="@+id/tv_person"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#FB6332"
            android:text="个人发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_person"
            android:layout_margin="@dimen/dp_5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_check"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_buesssion"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="@dimen/dp_227"
        android:layout_height="@dimen/dp_114"
        android:background="@drawable/shape_normal"
        >
        <TextView
            android:id="@+id/tv_buesssion"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/tab_background"
            android:text="商业发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_buesssion"
            android:layout_margin="@dimen/dp_5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_check"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_send"
        android:text="开始发布"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/tab_background"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/shape_red"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_43" />
</LinearLayout>